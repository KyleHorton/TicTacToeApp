<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171d50"
    android:orientation="vertical"
    tools:context="kylehorton.ser210.quinnipiac.edu.tictactoeapp.MainActivity">

    <TextView
        android:id="@+id/welcomeHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome to "
        android:textColor="#ffffff"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/toeHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tic-Tac-Toe!"
        android:textColor="#ffffff"
        android:textSize="40dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <GridLayout
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_gravity="center_horizontal"
        android:rowCount="2"
        android:columnCount="2">

        <Button
            android:id="@+id/play"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_column="0"
            android:layout_row="0"
            android:padding="20dp"
            android:text="Play"
            android:textSize="20dp"
            android:backgroundTint="#ffffff"
            android:onClick="onClickPlay"/>

        <Button
            android:id="@+id/instructions"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_column="1"
            android:layout_row="0"
            android:padding="20dp"
            android:text="Instructions"
            android:textSize="20dp"
            android:backgroundTint="#ffffff"
            android:onClick="onClickInstructions"/>

        <Button
            android:id="@+id/multi"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Multiplayer"
            android:textSize="20dp"
            android:backgroundTint="#ffffff"
            android:onClick="onClickMulti"/>

        <Button
            android:id="@+id/Leave"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="Leave Game"
            android:textSize="20dp"
            android:backgroundTint="#ffffff"
            android:onClick="onClickLeave"/>
    </GridLayout>


</LinearLayout>

